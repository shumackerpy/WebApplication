@model Aplicacion.Models.Curso

@{
    ViewData["Title"] = "Create";
}

<br />

<div class="text-center">
    <h2>Crear Curso</h2>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label">Tipo:</label>               
                <div class="form-check">
                    <input asp-for="Tipo" class="form-check-input" type="radio" value="Taller" id="tipoTaller" name="Tipo" />
                    <label class="form-check-label" for="tipoTaller">Taller</label>
                </div>
                <div class="form-check">
                    <input asp-for="Tipo" class="form-check-input" type="radio" value="Curso" id="tipoCurso" name="Tipo" />
                    <label class="form-check-label" for="tipoCurso">Curso</label>
                </div>
                <div class="form-check">
                    <input asp-for="Tipo" class="form-check-input" type="radio" value="Diplomado" id="tipoDiplomado" name="Tipo" />
                    <label class="form-check-label" for="tipoDiplomado">Diplomado</label>
                </div>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TituloObtenido" class="control-label"></label>
                <input asp-for="TituloObtenido" class="form-control" />
                <span asp-validation-for="TituloObtenido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horario" class="control-label"></label>
                <input asp-for="Horario" class="form-control" />
                <span asp-validation-for="Horario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaTermino" class="control-label"></label>
                <input asp-for="FechaTermino" class="form-control" />
                <span asp-validation-for="FechaTermino" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check"></i>
                    </button>

                    <a asp-action="Index" class="btn btn-warning">                       
                        <i class="bi bi-arrow-left"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}